@model List<VehicleViewModel>

@{
    ViewData["Title"] = "Aвтомобили";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-bordered table-responsive table-striped">
    <thead>
        <tr>
            <th>Марка</th>
            <th>Година</th>
            <th>Мощност</th>
            <th>Вносител</th>
            <th>Описание</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Model</td>
                <td>@vehicle.ManufacturedYear</td>
                <td>@vehicle.HorsePower PS</td>
                <td>@vehicle.Importer</td>
                <td data-description>@vehicle.Description</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/highlight.js" asp-append-version="true"></script>
}